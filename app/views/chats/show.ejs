
<%- contentFor('body') %>

<section class="video-container red lighten-1" style="padding-bottom: 60px;">
	<div class="nav-wrapper">
		<form action="users" method="POST">
			<div class="input-field">
				<input id="search" name="search" type="search" required>
				<label class="label-icon" for="search"><i class="material-icons white-text">search</i></label>
				<i class="material-icons">close</i>
			</div>
		</form>			
	</div>
</section>

<div class="container">
	<div class="row">
		<div class="col s12">
			<h3 class="header"><img src="../upload/<%= user.attributes.image %>" alt="" class="circle" width="60"><%= user.attributes.name %></h3>				

			<div class="input-field col s12">
				<% user.relations.chats.forEach(function(chat) { %>				
				<div class="barra"><span class="time-left"><%= chat.attributes.message %></span><span class="time-right"><%= chat.attributes.created_at %></span></div>
				<% }); %>

				<div id="chat">
					
				</div>

			</div>

			<ul class="collection">
				<div class="input-field col s12">					

					<input id="msg" type="text" class="validate">
					<label for="msg">Message</label>
				</div>
				<div class="input-field col s12">
					<button class="btn waves-effect waves-light" type="submit" name="action" 
					onclick="sendMsg('<%= user.attributes.id %>', '<%= session.cod %>', '<%= session.nome %>', '<%= session.image %>');">Send
					<i class="material-icons right">send</i>
				</button>
			</div>
		</ul>	

	</div>					

</div>
</div>